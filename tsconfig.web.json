{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/frontend/src/env.d.ts",
    "src/frontend/src/**/*",
    "src/frontend/src/**/*.tsx",
    "src/preload/*.d.ts",
    "src/shared/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@frontend/*": [
        "src/frontend/src/*"
      ],
      "@shared/*" : [
        "src/shared/*"
      ],
      "@/*" : [
        "src/frontend/src/*"
      ]
    }
  }
}
